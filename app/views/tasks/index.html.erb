
<h1>My tasks</h1>
<ul>
 <% @tasks.each do |task| %>
  <li>
    <h2>
   <%= link_to task.title, task_path(task) %>
   <%= link_to "Delete", task_path(task), class: "far fa-trash-alt", method: :delete, data: { confirm: "Delete #{task.title}?" }%>
    </h2>
  </li>
  <% end %>
</ul>

